@inherits ProjectCardBase

<div class="card isitar-project-card is-block is-clickable" @onclick="StartWorking" @onclick:preventDefault>
    @if (Project.HasImage)
    {
        <div class="card-image">
            <figure class="image is-3by1">
                <img src="@ProjectImageUrl" alt="Project image">
            </figure>
        </div>
    }
    <header class="card-content">
        <p class="title is-4 has-text-centered">
            @Project.Name
        </p>
    </header>
</div>